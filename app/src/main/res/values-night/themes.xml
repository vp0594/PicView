<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PicView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/backGroundColorSettingDialog</item>

    </style>

    <style name="Base.Theme.PicView_menu" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/black</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/backGroundColor</item>

    </style>

    <style name="Base.Theme.PicView.Activity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/backGroundColor</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorSurface">@color/backGroundColorSettingDialog</item>
    </style>
</resources>